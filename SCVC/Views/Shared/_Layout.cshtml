<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SCVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header style="text-align: center;">
        <nav class="navbar navbar-expand-lg navbar-light bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand btn border BtnLogo"
                    style="background-color: #0275d8; margin-left: 1rem; border-radius: 20px;" asp-controller=""
                    asp-action="" id="BtnLogo">
                    <img src="https://www.mamaxxi.com/wp-content/uploads/2013/08/yomevacuno_logo-01.png" alt="logo"
                        style="height: 3rem; width: 3rem;">
                    SCVC
                </a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active btn BtnInformacion" aria-current="page"
                                style="margin-left: 10px; border-radius: 10px; font-family: 'Times New Roman', Times, serif; font-size: 25px;"
                                id="BtnInformacion">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-info-circle-fill" viewBox="0 0 16 16">
                                    <path
                                        d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                                </svg>
                                Informacion
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Creditos" class="nav-link active btn BtnCreditos"
                                aria-current="page"
                                style="margin-left: 10px; border-radius: 10px; font-family: 'Times New Roman', Times, serif; font-size: 25px;"
                                id="BtnCreditos">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-file-earmark-person-fill" viewBox="0 0 16 16">
                                    <path
                                        d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0zm2 5.755V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1v-.245S4 12 8 12s5 1.755 5 1.755z" />
                                </svg>
                                Creditos
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div style="text-align: right; margin-left: -8rem;">
                <a class="navbar-brand btn border BtnLogin" style="border-radius: 20px; background-color: #0275d8;"
                    id="BtnLogin">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-person" viewBox="0 0 16 16">
                        <path
                            d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                    </svg>
                    login
                </a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="text-align: center; margin-top: 5rem;">
        <div class="border border-white jumbotron" style="width: 10; background-color: #0275d8;">
            <img style="height: 15rem; width: 15rem;" src="https://pbs.twimg.com/profile_images/2586242529/oym2j3gwktugb7vowkgh_400x400.png" alt="UMG">
            <h3>Universidad Mariano Galvez De Guatemala</h3>
            <h3>UMG</h3>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.6.1/gsap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/animationIndex.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>

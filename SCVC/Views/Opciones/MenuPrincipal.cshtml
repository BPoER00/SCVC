@{
    ViewData["Title"] = "Menu Principal";
    Layout = "_MenuPrincipal";
}

<div class="jumbotron border border-primary" style="margin-top: 2rem; height: 30rem; background-color: white; border-radius: 1rem;">

    <div class="container" style="text-align: center;">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="margin-top: -2rem;">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img style="width: 60rem; height: 15rem;" class="d-block w-100" src="https://i.ibb.co/gdrzFbb/Fondo-Menu-Principal.jpg" alt="Covid">
            </div>
            <div class="carousel-item">
                <img style="width: 60rem; height: 15rem;" class="d-block w-100" src="https://i.ibb.co/T2G3MQk/Agregar-Datos-Personas.jpg" alt="Muestr Vacunas">
            </div>
            <div class="carousel-item">
                <img style="width: 60rem; height: 15rem;" class="d-block w-100" src="https://i.ibb.co/cyNYFFJ/Consultas.jpg" alt="Vacunate">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="border border-top-0 border-primary" style="width: 55rem; height: 11rem;">
            <div class="container" style="text-align: center;">
                <a asp-controller="Opciones" asp-action="VistaAgregarPersona" id="Personas" class="btn btn-warning border border-primary" style="width: 6rem; height: 8rem; margin-top: 1rem;">
                    <img src="https://cdn-icons-png.flaticon.com/512/346/346569.png" alt="Agregar" style="width: 5rem;">
                    <h6>Agregar Persona</h6>
                </a>
                <a asp-controller="Opciones" asp-action="VistaVacunasPersona" id="Vacunas" class="btn btn-warning border border-primary" style="width: 6rem; height: 8rem; margin-top: 1rem;">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/3/3b/Needle_syringe.png" alt="Agregar" style="width: 4rem;">
                    <h6>Vacunas</h6>
                </a>
                <a asp-controller="Opciones" asp-action="VistaRegistros" id="Registros" class="btn btn-warning border border-primary" style="width: 6rem; height: 8rem; margin-top: 1rem;">
                    <img src="https://images.vexels.com/media/users/3/144223/isolated/preview/f1d0807f8ffad0197757d840bdc97d0b-icono-de-registro-medico.png" alt="Agregar" style="width: 5rem;">                    
                    <h6>Registros</h6>
                </a>
                <a asp-controller="Opciones" asp-action="VistaControl" id="Usuarios" class="btn btn-warning border border-primary" style="width: 6rem; height: 8rem; margin-top: 1rem;">
                    <img src="https://cdn-icons-png.flaticon.com/512/32/32441.png" alt="Agregar" style="width: 4.5rem;">                    
                    <h6>Control Usuarios</h6>
                </a>
            </div>
    </div>
</div>

@model BuscarPersona
@{
    ViewData["Title"] = "Vacunaciones";
    Layout = "_MenuPrincipal";
}

<div class="jumbotron border border-primary"
    style="margin-top: 2rem; height: 30rem; background-color: white; border-radius: 1rem;">
        <form asp-controller="Opciones" asp-action="VistaVacunas" method="post">
            <div style="text-align: center; margin-top: 5rem;">
                <h1><span class="badge badge-info">Buscar Persona A Vacunar:</span></h1>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label>Id: </label>
                    <input type="number" asp-for="Id" class="form-control">
                    <span asp-validation-for="Id"></span>
                </div>
            </div>     
            <input type="hidden" value="@ViewBag.Token" id="Token" name="Token">
            <input type="hidden" value="@ViewBag.Usuario" name="Usuarios" id="Usuarios">
            <button class="btn btn-primary" style="border-radius: 5rem;">
                Buscar
            </button>                   
        </form>
</div>
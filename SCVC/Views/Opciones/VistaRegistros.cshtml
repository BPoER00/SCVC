@model BuscarPersona
@{
    Layout = "_MenuPrincipal";
}

<div class="jumbotron border border-primary"
    style="margin-top: 2rem; height: 30rem; background-color: white; border-radius: 1rem;">
    <div class="row" style="text-align: center; margin-top: 4rem;">
        <div class="col">
            <form asp-controller="Registro" asp-action="RegistroPersonas" method="post">
                <input type="hidden" asp-for="Id" id="Id" value="@ViewBag.Id">
                <input type="hidden" asp-for="Token" id="Token" value="@ViewBag.Token">
                <input type="hidden" asp-for="Nombre" id="Nombre" value="@ViewBag.Nombre">
                <input type="hidden" asp-for="Usuario" id="Usuario" value="@ViewData["Usuario"]">             
                <button type="submit" class="btn btn-primary">
                    <img src="https://www.ctxdetectives.com/wp-content/uploads/2019/02/detectives-busqueda-de-personas.jpg" style="width: 12rem; height: 12rem;" alt="Consulta">
                    <h3>Registro Personas</h3>
                </button>                
            </form>
        </div>
        <div class="col">
            <form asp-controller="Registro" asp-action="RegistroVacunacion" method="post">
                <input type="hidden" asp-for="Id" id="Id" value="@ViewBag.Id">
                <input type="hidden" asp-for="Token" id="Token" value="@ViewBag.Token">
                <input type="hidden" asp-for="Nombre" id="Nombre" value="@ViewBag.Nombre">
                <input type="hidden" asp-for="Usuario" id="Usuario" value="@ViewData["Usuario"]">   
                <button type="submit" class="btn btn-primary">
                    <img src="https://as.com/diarioas/imagenes/2021/05/30/actualidad/1622405404_602213_1622405562_noticia_normal_recorte1.jpg" style="width: 12rem; height: 12rem;" alt="Consulta">
                    <h3>Registro Vacunacion</h3>
                </button>
            </form>
        </div>
    </div>
</div>